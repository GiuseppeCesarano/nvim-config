{
  "diagnostic.checkCurrentLine": true,
  "suggest.noselect": false,
  "suggest.enablePreview": true,
  "coc.preferences.colorSupport": true,
  "semanticTokens.filetypes": ["*"],
  "inlayHint.enable": false,
  "inlayHint.display": false,
  "inlayHint.enableParameter": false,
  "explorer.icon.enableNerdfont": true,
  "clangd.fallbackFlags": ["-std=c++20"],
  "clangd.compilationDatabaseCandidates": ["${workspaceFolder}","${workspaceFolder}/build"],
  "zig.enabled": true,
  "zig.path": "zls",
  "zig.debugLog": false,
  "zig.startUpMessage": false,
  "zig.warn_style": true,
  "marketplace.npmsio": true,
  "markdownlint.config": {
    "default": true,
    "line_length": false
  },
  "sql.database": "Sqlite",
  "snippets.ultisnips.pythonPrompt": false,
  "languageserver": {
    "glsl": {
      "command": "glslls",
      "filetypes": ["glsl", "vert", "tesc", "tese", "frag", "geom", "comp"],
      "args": [
        "--stdin"
      ]
    }
  }
}
